<Page x:Class="B2CPolicyEditor.Views.JourneyStepType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:B2CPolicyEditor.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Step Type">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="_stepTypes" SelectedIndex="{Binding SelectedStepType}" Margin="10" />
        <ComboBox Grid.Column="1" x:Name="_stepUI" ItemsSource="{Binding StepUIs}" Margin="10" />
    </Grid>
</Page>
